<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Resturant.
    -->
    <changeSet id="20180801072323-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="location_id"
                                 baseTableName="resturant"
                                 constraintName="fk_resturant_location_id"
                                 referencedColumnNames="id"
                                 referencedTableName="location"/>

        <addForeignKeyConstraint baseColumnNames="resturants_id"
                                 baseTableName="resturant_opening_hour"
                                 constraintName="fk_resturant_opening_hour_resturants_id"
                                 referencedColumnNames="id"
                                 referencedTableName="resturant"/>
        <addForeignKeyConstraint baseColumnNames="opening_hours_id"
                                 baseTableName="resturant_opening_hour"
                                 constraintName="fk_resturant_opening_hour_opening_hours_id"
                                 referencedColumnNames="id"
                                 referencedTableName="opening_hour"/>
        
    </changeSet>
</databaseChangeLog>
